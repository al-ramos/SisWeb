<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SisWebCrud</title>
    
    <!-- Favicon (opcional) -->
    <link rel="shortcut icon" href="~/favicon.ico" />

    <!-- Bootstrap CSS via CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/cerulean/bootstrap.min.css" crossorigin="anonymous"/>
    
    <!-- CSS personalizado, se houver -->
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />

    <!-- Adicione no <head> do _Layout.cshtml_ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">


    <!-- Seção para estilos específicos de páginas -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <!-- Navbar utilizando Bootstrap -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">SisWebCrud</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Alterna navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        </li>
                    <!-- Adicione outros links se necessário -->
                        </ul>
                </div>
        </nav>
    </header>

    <div class="container mt-4">
        <!-- Conteúdo das views renderizado aqui -->
            @RenderBody()
    </div>

    <footer class="footer bg-dark text-light mt-4">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - SisWebCrud. Todos os direitos reservados.
        </div>
    </footer>

    <!-- Scripts do Bootstrap e jQuery via CDN -->
        @* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script> *@
        @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script> *@

        <!-- jQuery: utilize a versão completa -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
        <!-- jQuery Mask Plugin -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" crossorigin="anonymous"></script>

@RenderSection("Scripts", required: false)

</body>
</html>
